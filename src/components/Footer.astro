---
import siteConfig from '../data/site-config';

const socialLinks = siteConfig.socialLinks || [];
---

<footer class="w-full max-w-3xl mx-auto pb-2">
    <!-- Dashed line separator -->
    <div class="border-t border-dashed border-main pt-3">
        <div class="flex flex-col gap-4 sm:flex-row sm:justify-between sm:items-center">
            <!-- Social Links -->
            {
                socialLinks.length > 0 && (
                    <div class="flex flex-wrap gap-x-4 gap-y-1 order-2 sm:order-1">
                        {socialLinks.map((link) => (
                            <a class="text-sm hover:underline hover:underline-offset-2" href={link.href} target="_blank" rel="noopener noreferrer">
                                {link.text}
                            </a>
                        ))}
                    </div>
                )
            }

            <!-- Copyright -->
            <p class="text-sm order-1 sm:order-2">
                &copy; {new Date().getFullYear()}&nbsp;<a class="hover:underline hover:underline-offset-2" href="/">{siteConfig.title}</a>. All rights reserved.
            </p>
        </div>
    </div>
</footer>
